@model PropertyManagement.ViewModels.AddCompanyVM
<!-- Load common layout and retrieve report title -->
@{
    ViewBag.Title = ViewBag.ReportTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Back to Company Management", "Index")
<h4>@ViewBag.ReportTitle</h4>
@using (Html.BeginForm())
{
    <table width="100%">
        <tr>
            <td width="50%">
                <div  class="crudInput">
                    @Html.LabelFor(x => x.CompanyName)
                    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
                </div>
                <div  class="crudInput">
                    <label>Start Date:</label> @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control datepicker", @type = "date", @Value = Model.StartDate.ToString("yyyy-MM-dd") })
                </div>
                <div  class="crudInput">
                    @Html.LabelFor(x => x.CompanyPhone)
                    @Html.TextBoxFor(x => x.CompanyPhone, new { @class = "form-control" })
                </div>
                <div  class="crudInput">
                    @Html.LabelFor(x => x.CompanyCellPhone)
                    @Html.TextBoxFor(x => x.CompanyCellPhone, new { @class = "form-control" })
                </div>
                <div class="crudInput">
                    @Html.LabelFor(x => x.EIN)
                    @Html.TextBoxFor(x => x.EIN, new { @class = "form-control" })
                </div>
                <div class="crudInput">
                    @Html.LabelFor(x => x.EmailAddress)
                    @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
                </div>
                <div  class="crudInput">
                    @Html.LabelFor(x => x.Address)
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                </div>
                <div  class="crudInput">
                    @Html.LabelFor(x => x.City)
                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                </div>
                <div>
                    @Html.LabelFor(x => x.State)
                    @Html.TextBoxFor(x => x.State, new { @class = "form-control" })
                </div>
                <div  class="crudInput">
                    @Html.LabelFor(x => x.Zip)
                    @Html.TextBoxFor(x => x.Zip, new { @class = "form-control" })
                </div>
                <div  class="crudInput">
                    @Html.LabelFor(x => x.BankAccount)
                    @Html.TextBoxFor(x => x.BankAccount, new { @class = "form-control" })
                </div>
                <div  class="crudInput">
                    @Html.LabelFor(x => x.RountingNo)
                    @Html.TextBoxFor(x => x.RountingNo, new { @class = "form-control" })
                </div>
                <div style="width:220px">
                    @Html.LabelFor(x => x.AdminID)
                    @Html.DropDownListFor(x => x.AdminID, Model.AllUser, "Please select admin", new { @class = "form-control selectpicker" })
                </div>
                <div style="width:220px">
                    @Html.LabelFor(x => x.Status)
                    @Html.DropDownListFor(x => x.StatusID, Model.AllStatus, "Please select status", new { @class = "form-control selectpicker" })
                </div>
                <input type="submit" value="Submit" />
            </td>
        </tr>
    </table>
}
