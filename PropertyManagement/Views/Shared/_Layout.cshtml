<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!--  -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <!-- CCHMC Custom styles -->
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/StyleCustom.css" rel="stylesheet" />

    <!-- Google APIs -->
    @*<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>*@
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>  
    <script src="~/Scripts/jquery-1.12.4.js"></script>  

    <!-- HightCharts -->
    <script src="http://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/heatmap.js"></script>

    <!-- JQuery Themes -->
    <link href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" rel="stylesheet" />
    <link href="http://code.jquery.com/ui/1.11.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet" />
    <link href="http://code.jquery.com/ui/1.11.4/themes/flick/jquery-ui.css" rel="stylesheet" />
    <link href="http://code.jquery.com/ui/1.11.4/themes/redmond/jquery-ui.css" rel="stylesheet" />

    <!-- Datatables.net -->
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/1.2.2/css/buttons.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/tabletools/2.2.3/css/dataTables.tableTools.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/plug-ins/3cfcc339e89/integration/jqueryui/dataTables.jqueryui.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.10.15/api/sum().js"></script>
    <script src="~/Scripts/buttons.html5.js"></script>  
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/3cfcc339e89/integration/jqueryui/dataTables.jqueryui.js"></script>

    <!-- JQuery UI theme roller -->
    <link href="~/Content/themes/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <!-- BootStrap Date Picker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.1/js/bootstrap-datepicker.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.1/css/bootstrap-datepicker.css" rel="stylesheet" />

    <!-- BootStrap Select Picker for DDL -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/js/bootstrap-select.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/css/bootstrap-select.min.css" />

    <!-- BootStrap Main -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

    <!-- Style for moving the Datatables.net buttons to the right side -->
    <style type="text/css">
        .savebuttons {
            float: right;
        }
    </style>
</head>

    <body>
        <!-- Navigation bar for logged in users -->
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                    <img src="~/Content/images/sunriseLogo.jpg" class="navbar-logo"/>               
                    @if (Session["UserName"] != null)
                    {
					<p>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("GoHome", "Account")'">主页</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "BankAccount")'">银行流水</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Rent")'">租金</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Expense")'">费用</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Company")'">公司</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Property")'">房产</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Tenant")'">房客</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Task")'">项目</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "User")'">用户</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "FinancialAccount")'">账号</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Report")'">报表</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Tax")'">税务</button>
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "NestedExpense")'">税表</button>
						@if (((string)Session["UserName"]) == "hongyang" || ((string)Session["UserName"]) == "haifang" 
                            || ((string)Session["UserName"]) == "HuajunLiu")
						{
							<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "ECommerceHome")'">电商</button>
						}
						<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("LogOut", "Account")'">Logout</button>
					</p>
                    }
            </div>
        </div>
        <div><hr /></div>

        <!-- Report/Chart body -->
        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>

        <!-- Footer for all CCHMC pages -->
        <footer>
            <p>&copy; 2005-@DateTime.Now.Year </p>
        </footer>
    </body>


</html>